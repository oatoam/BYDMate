<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 主PIPView - 通过XML属性指定实例ID -->
    <com.toddmo.bydmate.client.widgets.ApplicationPIPView
        android:id="@+id/main_pip_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:pipInstanceId="main_pip" />

    <!-- 副PIPView - 通过XML属性指定实例ID -->
    <com.toddmo.bydmate.client.widgets.ApplicationPIPView
        android:id="@+id/secondary_pip_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:pipInstanceId="secondary_pip" />

    <!-- 自定义PIPView - 使用自定义实例ID -->
    <com.toddmo.bydmate.client.widgets.ApplicationPIPView
        android:id="@+id/custom_pip_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:pipInstanceId="navigation_pip" />

</LinearLayout>